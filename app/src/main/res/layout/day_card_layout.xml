<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_padding"
    android:background="@color/colorWhite"
    android:outlineAmbientShadowColor="@color/colorDeepGray"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/click_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/tiny_padding"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-08-07"
                android:textColor="@color/colorDeepGray"
                android:textSize="@dimen/txt_stext"
                android:textStyle="bold"
                android:paddingRight="@dimen/small_padding"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목요일"
                android:textColor="@color/colorDeepGray"
                android:textSize="@dimen/txt_stext"
                android:textStyle="bold"
                android:paddingRight="@dimen/small_padding"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/click_starting_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/small_padding"
                android:background="@color/colorDeeperSkyBlue"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출근 시각"
                    android:textSize="@dimen/txt_stext"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:id="@+id/tv_starting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00"
                    android:textSize="@dimen/txt_text"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/click_finishing_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/small_padding"
                android:background="@color/colorDeepSkyBlue"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="퇴근 시각"
                    android:textSize="@dimen/txt_stext"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:id="@+id/tv_finishing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00"
                    android:textSize="@dimen/txt_text"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/click_dinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/small_padding"
                android:background="@color/colorDeepGray"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저녁 식대"
                    android:textSize="@dimen/txt_stext"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:id="@+id/tv_dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6,000"
                    android:textSize="@dimen/txt_text"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:background="@color/colorDeeperSkyBlue"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorDeepGray"/>
        </LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:outlineAmbientShadowColor="@color/colorDeepGray">

            <LinearLayout
                android:id="@+id/click_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/small_padding"
                android:background="@color/colorWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ 연 장 ]"
                    android:textSize="@dimen/txt_stext"
                    android:textStyle="bold"
                    android:textColor="@color/colorDeeperSkyBlue"
                    android:layout_marginBottom="@dimen/small_padding"
                    />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="@dimen/txt_text"
                    android:textColor="@color/colorDeepGray"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!--<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorDeeperSkyBlue"/>-->
            <LinearLayout
                android:id="@+id/click_night"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ 야 근 ]"
                    android:textSize="@dimen/txt_stext"
                    android:textStyle="bold"
                    android:textColor="@color/colorDeeperSkyBlue"
                    android:layout_marginBottom="@dimen/small_padding"
                    />

                <TextView
                    android:id="@+id/tv_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="@dimen/txt_text"
                    android:textColor="@color/colorDeepGray"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>